<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.holycow.ucrentrancetest.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UCRiverside Entrance Exam"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="38dp"
        android:text="Select the bigger number, if correct you will be given a point and if incorrect you will be deducted a point."
        android:textAlignment="center"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="48dp" />

    <Button
        android:id="@+id/left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="leftButtonClick"
        android:text="0"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="231dp" />

    <Button
        android:id="@+id/right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="rightButtonClick"
        android:text="0"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="231dp" />

    <TextView
        android:id="@+id/pointsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="475dp" />

</LinearLayout>
